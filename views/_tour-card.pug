mixin tourcard(name, durationDays, maxGroupSize, difficulty, ratingsAverage, ratingsQuantity, price, discount, summary, description, imageCover, startLocation, startDates, locations, slug)
    div.tour-card
        div.tour-card__header
            img.tour-card__image(src=`/images/tours/${imageCover}` alt='')
            h2.tour-card__heading= name
        div.tour-card__content
            p.tour-card__lead-text #{difficulty} #{durationDays}-day tour
            p.tour-card__text= summary
            div.tour-card__data
                div.tour-card__data-item
                    svg(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' d='M15 10.5a3 3 0 11-6 0 3 3 0 016 0z')
                        path(stroke-linecap='round' stroke-linejoin='round' d='M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z')
                    p= startLocation.description
                div.tour-card__data-item
                    svg(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' d='M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5')
                    p= startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
                div.tour-card__data-item
                    svg(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' d='M3 3v1.5M3 21v-6m0 0l2.77-.693a9 9 0 016.208.682l.108.054a9 9 0 006.086.71l3.114-.732a48.524 48.524 0 01-.005-10.499l-3.11.732a9 9 0 01-6.085-.711l-.108-.054a9 9 0 00-6.208-.682L3 4.5M3 15V4.5')
                    p #{locations.length} stops
                div.tour-card__data-item
                    svg(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' d='M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z')
                    p #{maxGroupSize} people
        footer.tour-card__footer
            div.tour-card__stats
                p #[span $#{price.toLocaleString()}] per person
                p #[span= ratingsAverage.toFixed(1)] (#{ratingsQuantity} ratings)
            a.button.button-primary(href=`/tours/${slug}`) Details